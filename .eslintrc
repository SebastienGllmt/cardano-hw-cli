{
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".ts"
                ]
            }
        }
    },
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "airbnb-base",
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/no-unused-vars": [
            "warn",
            {
              "args": "none"
            }
          ],
          "no-unused-vars": "off",
        "semi": [2, "never"],
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": "error",
        "import/extensions": 0,
        "max-len": [1, { "code": 110 }],
        "import/prefer-default-export": "off"
    }
}